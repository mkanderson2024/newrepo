<!-- Content heading -->
 <% if (title) { %>
    <h1><%= title %></h1>
    <% } %>

<% if (messages('notice')) { %>
    <div class="flash-notice">
        <% messages('notice').forEach(function(msg) { %>
            <p><%= msg %></p>
        <% }) %>
    </div>
<% } %>

<section class="login-form">
    <form id="loginForm" action="/account/login" method="post">
        <div class="login-form-group">
        <!-- Email -->
            <label class="email-label" for="email">*Email:</label><br>
            <input class="email-input" type="email-input" id="account_email" name="account_email" required placeholder="example@gmail.com" value="<%= locals.account_email %>">
        </div>
        <!-- Password -->
        <div class="login-form-group">
            <label class="password-label" for="password">*Password:</label>
            <input class="passsword-input" type="password" id="password" name="password" required placeholder="Enter password"
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
        <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>
        <button class="login-button" type="submit">Login</button>
    </form>
    <p class="no-account">No account? <a href="/account/register">Register</a></p>
</section>
